    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="{{ asset('css/bootstrap.min.css') }}">    
	<!-- Site CSS -->
    <link rel="stylesheet" href="{{ asset('css/style.css') }}">    
    <!-- Responsive CSS -->
    <link rel="stylesheet" href="{{ asset('css/responsive.css') }}">
    <!-- Custom CSS -->
    <link rel="stylesheet" href="{{ asset('css/custom.css') }}">

    
    <style>
        body {
          background-image: url('{{ asset('profil/img/wizard.jpg') }}');
          background-repeat: no-repeat;
          background-attachment: fixed; 
          background-size: 100% 100%;
        }
        </style>
</head>

<body>


	<!-- Start header -->
	<header class="top-navbar">
		<nav class="navbar navbar-expand-lg navbar-light bg-light">
			<div class="container">
				<a class="navbar-brand" href="index.html">
					<img src="{{ asset('images/logoo.png') }}" width="20%" heigth="20%" alt="" />
				</a>
				<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbars-rs-food" aria-controls="navbars-rs-food" aria-expanded="false" aria-label="Toggle navigation">
				  <span class="navbar-toggler-icon"></span>
				</button>
				<div class="collapse navbar-collapse" id="navbars-rs-food">
					<ul class="navbar-nav ml-auto">
						<li class="nav-item"><a class="nav-link" href="{{ path('home') }}">Home</a></li>
						{% if app.user %}

						{% if app.user.getType() == 1 %}
						<li class="nav-item active"><a class="nav-link" href="../profil/{{app.user.getId}}">Profil</a></li>
						
						{% elseif app.user.getType() == 2 %}
						<li class="nav-item"><a class="nav-link" href="../profilRestau/{{app.user.getId}}">Profil</a></li>

						{% endif %}
						{% endif %}
						<li class="nav-item"><a class="nav-link" href="{{ path('viewRestau') }}">View Restaurants</a></li>
						<li class="nav-item"><a class="nav-link" href="{{ path('about') }}">About</a></li>

						{% if not app.user %}
            	<li class="nav-item dropdown">
							<a class="nav-link dropdown-toggle" href="#" id="dropdown-a" data-toggle="dropdown">Sign Up</a>
							<div class="dropdown-menu" aria-labelledby="dropdown-a">
								<a class="dropdown-item" href="{{ path('signUpClient') }}">Client</a>
								<a class="dropdown-item" href="{{ path('signUpRestau') }}">Restaurant</a>
							</div>
						</li>
						<li class="nav-item"><a class="nav-link" href="{{ path('login') }}">Sign In</a></li>
						{% else %}
						<li class="nav-item"><a class="nav-link" href="{{ path('logout') }}">Logout</a></li>
						{% endif %}
					</ul>
				</div>
			</div>
		</nav>
	</header>
	<!-- End header -->
    

    <!--   Big container   -->
    <div class="container">
        <div class="row">
        <div class="col-sm-8 col-sm-offset-2">

            <!--      Wizard container        -->
            <div class="wizard-container">

                <div class="card wizard-card" data-color="orange" id="wizardProfile">
                    {{ form_start(form) }}
                

                    

						<div class="wizard-navigation">
							<ul>
	                            <li><a id="prof" href="#about" data-toggle="tab">Profil</a></li>
	                            
	                        </ul>

						</div>

                        <div class="tab-content">
                            <div class="tab-pane" id="about">
                              <div class="row">
                                  <h4 class="info-text"> </h4>
                                  <div class="col-sm-4 col-sm-offset-1">
                                     <div class="picture-container">
                                          <div class="picture">
                                              <img src="{{ asset( 'uploads/'~img) }}" name="image" class="picture-src" id="wizardPicturePreview" title=""/>


                                            {{form_row(form.restau_image , {'label' : ' ', 'id': 'wizard-picture'})}}
                                          </div>
                                          <h6>Choose Picture</h6>
                                      </div>
                                  </div>
                                  <div class="col-sm-6">
                                      <div class="form-group">
                                        <label>Restaurant Name : <small></small></label>
                                        
                                        {{form_row(form.restau_name , {'label' : ' ' , 'name': 'firstname' , 'attr' : 
                                        {'placeholder' : 'Restaurant Name ...' , 'class' : 'form-control'}})}}

                                      </div>
                                      <div class="form-group">
                                          <label>Phone Number : <small></small></label><br>
                                        {{form_row(form.restau_phone , {'label' : ' ' , 'name': 'firstname' , 'attr' : 
                                        {'placeholder' : 'Restaurant Phone ...' , 'class' : 'form-control'}})}}                                      </div>
                                  </div>
                                  <div class="col-sm-10 col-sm-offset-1">
                                      <div class="form-group">
                                          <label>Email : <small></small></label><br>
                                          
                                        {{form_row(form.restau_mail , {'label' : ' ' , 'name': 'firstname' , 'attr' : 
                                        {'placeholder' : 'Restaurant Email ...' , 'class' : 'form-control' , 'readonly' : true}})}}

                                          <label> <small></small></label>
                                      </div>
                                        <div class="form-group">
                                        <label>Password : <small></small></label>
                                        {{form_row(form.restau_password , {'label' : ' ' , 'name': 'firstname' , 'attr' : 
                                        {'placeholder' : '************' , 'class' : 'form-control'}})}}                                      </div>
                                        <div class="form-group">
                                        <label>Confirm Password : <small></small></label>
                                        {{form_row(form.confirme_restau_password , {'label' : ' ' , 'name': 'firstname' , 'attr' : 
                                        {'placeholder' : '************' , 'class' : 'form-control'}})}}                                       </div>
                                  </div>                              
                              </div>

                                                                      <div class="form-group">
                                        <label>Description : <small></small></label>
                                        {{form_row(form.restau_description , {'label' : ' ' , 'name': 'lastname' , 'attr' : 
                                        {'placeholder' : 'Description' , 'class' : 'form-control'}})}}                                       </div>
                                  </div>    

                              
                            </div>
                           
                           <!--Start Gallery-->

                            <!-- Page Content -->
                            <div class="container">

                            <h1 class="font-weight-light text-center text-lg-left mt-4 mb-0">Thumbnail Gallery</h1>

                            <hr class="mt-2 mb-5">

                            <div class="row text-center text-lg-left">

                                <div class="col-lg-3 col-md-4 col-6">
                                <a class="d-block mb-4 h-100">
                                        <img class="img-fluid img-thumbnail" src="https://source.unsplash.com/pWkk7iiCoDM/400x300" alt="">
                                    </a>
                                </div>
                                <div class="col-lg-3 col-md-4 col-6">
                                <a class="d-block mb-4 h-100">
                                        <img class="img-fluid img-thumbnail" src="https://source.unsplash.com/aob0ukAYfuI/400x300" alt="">
                                    </a>
                                </div>
                                <div class="col-lg-3 col-md-4 col-6">
                                <a class="d-block mb-4 h-100">
                                        <img class="img-fluid img-thumbnail" src="https://source.unsplash.com/EUfxH-pze7s/400x300" alt="">
                                    </a>
                                </div>
                                
                                <!-- ADD HERE -->

                                <div class="col-lg-3 col-md-4 col-6">
                                <a href="#" class="d-block mb-4 h-100">

                                    <div class="picture">
                                        <img src="https://placehold.it/150x150" class="picture-src" id="wizardPicturePreview" title=""/>
                                        <input type="file" id="wizard-picture">
                                    </div>

                                    </a>
                                </div>
                                

                            </div>

                            <div class="form-group">

                            <label>Localisation : <small></small></label>
                            
                            <iframe src="{{app.user.getLocalisation}}" width="600" height="450" frameborder="0" style="border:0;" allowfullscreen="" aria-hidden="false" tabindex="0"></iframe>

                                        {{form_row(form.localisation , {'label' : ' ' , 'name': 'lastname' , 'attr' : 
                                        {'placeholder' : 'Lien de Localisation' , 'class' : 'form-control'}})}}
                            </div>
                                
                                <center><button type="submit" class="btn btn-primary">Save Change</button></center>

                            </div>
                            <!-- /.container -->

                           <!--End Gallery-->
                            
                        </div>

                        

                            <div class="clearfix"></div>
                        </div>

                    {{ form_end(form) }}
                </div>
            </div> <!-- wizard container -->
        </div>
        </div><!-- end row -->
    </div> <!--  big container -->
   

</div>

</body>

